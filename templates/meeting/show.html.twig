            <tr>
                <th>Duration</th>
                <td>{{ meeting.duration }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ meeting.createdAt ? meeting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start_url</th>
                <td>{{ meeting.startUrl }}</td>
            </tr>
            <tr>
                <th>Join_url</th>
                <td>{{ meeting.joinUrl }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ meeting.password }}</td>
            </tr>
            <tr>
                <th>H323_password</th>
                <td>{{ meeting.h323Password }}</td>
            </tr>
            <tr>
                <th>Pstn_password</th>
