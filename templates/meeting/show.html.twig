{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ meeting.uuid }}</td>
            </tr>
            <tr>
                <th>Host_id</th>
                <td>{{ meeting.hostId }}</td>
            </tr>
            <tr>
                <th>Host_email</th>
                <td>{{ meeting.hostEmail }}</td>
            </tr>
            <tr>
                <th>Topic</th>
                <td>{{ meeting.topic }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ meeting.status }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ meeting.startTime ? meeting.startTime|date('Y-m-d H:i:s') : '' }}</td>
