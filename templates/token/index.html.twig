{% extends 'base.html.twig' %}

{% block title %}Token index{% endblock %}

{% block body %}
    <h1>Token index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Access_token</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for token in tokens %}
            <tr>
                <td>{{ token.id }}</td>
                <td>{{ token.accessToken }}</td>
                <td>
                    <a href="{{ path('token_show', {'id': token.id}) }}">show</a>
                    <a href="{{ path('token_edit', {'id': token.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('token_new') }}">Create new</a>
{% endblock %}
