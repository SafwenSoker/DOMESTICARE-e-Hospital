{{ form_start(form) }}
<div class="card border-secondary mb-3 mx-auto" style="max-width: 20rem;">
	<div class="card-header">Modifier maladie</div>
	<div class="card-body">
		<img src="{{asset("Images/logo.png")}}" width="50" height="50">
		{{ form_row(form.nom) }}
		{{ form_row(form.cause) }}
		{{ form_row(form.symptome) }}
		{{ form_row(form.traitement) }}
		{{ form_row(form.photo, { 'disabled' : 'disabled' }) }}
		{{ form_row(form.slug, {'disabled' : 'disabled'})  }}
		<button type="submit" class="btn btn-primary">Enregistrer</button>
	</div>
</div>
{{ form_end(form) }}
